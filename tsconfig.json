{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es6",
    "outDir": ".build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2015"],
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@domains/*": ["src/domains/*"]
    }
  },
  "include": ["./src", "./globals.d.ts"],
  "exclude": ["node_modules"]
}
